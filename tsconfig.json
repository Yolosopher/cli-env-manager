{
    "compilerOptions": {
      "outDir": "dist",
      "module": "CommonJS",
      "target": "ES2018",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "src/**/__tests__/*"]
  }
  